rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 記事データ（公開）
    match /articles/{articleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 固定ページ（公開読み取り、認証済みユーザーのみ書き込み）
    match /pages/{pageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // カテゴリー（公開）
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // タグ（公開）
    match /tags/{tagId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 検索履歴（公開読み取り、誰でも書き込み可）
    match /searchHistory/{keyword} {
      allow read: if true;
      allow write: if true;
    }
    
    // リクエスト（誰でも作成可能）
    match /requests/{requestId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if false;
    }
    
    // ユーザー情報（認証済みユーザーは自分のみ読み書き可、管理者は全員読み取り可）
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // お気に入り（認証済みユーザーのみ）
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // メディアテナント（公開読み取り可、認証済みユーザーのみ書き込み）
    match /mediaTenants/{tenantId} {
      allow read: if true;  // middlewareから読み取れるよう公開
      allow write: if request.auth != null;
    }
    
    // ブロック（公開読み取り、認証済みユーザーのみ書き込み）
    match /blocks/{blockId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // サイト設定（公開読み取り、認証済みユーザーのみ書き込み）
    match /site/{siteId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // メディアファイル（公開読み取り、認証済みユーザーのみ書き込み）
    match /media/{mediaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // クライアント（認証済みユーザーのみ読み書き可）
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // ライター（公開読み取り、認証済みユーザーのみ書き込み）
    match /writers/{writerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}


